+from estimator.calculator import EstimateInput, calculate
+
+
+def test_calculate_aws_range_and_margin_floor():
+    out = calculate(
+        EstimateInput(
+            vm_count=10,
+            cpu_per_vm=4,
+            memory_gb_per_vm=16,
+            storage_gb_per_vm=100,
+            windows_vms=5,
+            linux_vms=5,
+            provider="aws",
+            resource_discount=0.1,
+            include_dr=True,
+        )
+    )
+    aws = out["providers"]["aws"]
+    assert aws["monthly_high"] >= aws["monthly_low"]
+    assert aws["margin_floor"] == 0.11
 
EOF
