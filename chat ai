+"""Deterministic pricing catalog and sizing logic for AWS/Azure pilot estimates."""
+from __future__ import annotations
+
+from dataclasses import dataclass
+from datetime import date
+
+AWS_MARGIN_FLOOR = 0.11
+AZURE_MARGIN_FLOOR = 0.17
+PRICING_VERSION = f"pilot-static-{date.today().isoformat()}"
+
+
+@dataclass(frozen=True)
+class VmType:
+    provider: str
+    name: str
+    vcpu: int
+    memory_gb: int
+    monthly_price: float
+
+
+CATALOG = {
+    "aws": [
+        VmType("aws", "t3.medium", 2, 4, 30.37),
+        VmType("aws", "m6i.large", 2, 8, 69.12),
+        VmType("aws", "m6i.xlarge", 4, 16, 138.24),
+        VmType("aws", "m6i.2xlarge", 8, 32, 276.48),
+        VmType("aws", "m6i.4xlarge", 16, 64, 552.96),
+    ],
+    "azure": [
+        VmType("azure", "B2ms", 2, 8, 62.05),
+        VmType("azure", "D4as_v5", 4, 16, 155.12),
+        VmType("azure", "D8as_v5", 8, 32, 310.24),
+        VmType("azure", "D16as_v5", 16, 64, 620.48),
+    ],
+}
+
+
+def choose_low_high_types(provider: str, cpu: int, memory_gb: int) -> tuple[VmType, VmType]:
+    """Maps requested cpu/memory to bounded low/high representative VM types."""
+    types = CATALOG[provider]
+    eligible = [t for t in types if t.vcpu >= cpu and t.memory_gb >= memory_gb]
+    if not eligible:
+        return types[-2], types[-1]
+    low = eligible[0]
+    high = eligible[min(1, len(eligible) - 1)] if len(eligible) > 1 else eligible[0]
+    return low, high
+
+
+def margin_floor(provider: str) -> float:
+    return AZURE_MARGIN_FLOOR if provider == "azure" else AWS_MARGIN_FLOOR
