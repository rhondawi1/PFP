@@ -0,0 +1,126 @@
+from __future__ import annotations
+
+import os
+from pathlib import Path
+
+from flask import Flask, flash, redirect, render_template, request, send_file, url_for
+from werkzeug.utils import secure_filename
+
+from estimator.audit import append_audit
+from estimator.calculator import EstimateInput, calculate
+from estimator.pdf_report import build_pdf
+from estimator.rvtools import parse_rvtools
+
+app = Flask(__name__)
+app.secret_key = "dev-secret"
+app.config["UPLOAD_FOLDER"] = "data/uploads"
+Path(app.config["UPLOAD_FOLDER"]).mkdir(parents=True, exist_ok=True)
+
+LAST_ESTIMATE: dict = {}
+
+
+@app.before_request
+def kill_switch_guard():
+    if os.path.exists("data/KILL_SWITCH") and request.endpoint not in {"static"}:
+        return "System is temporarily unavailable by Professional Services control.", 503
+
+
+@app.route("/health")
+def health():
+    return {"status": "ok"}, 200
+
+
+@app.route("/", methods=["GET", "POST"])
+def index():
+    if request.method == "POST":
+        provider = request.form["provider"]
+        include_migration = bool(request.form.get("include_migration"))
+        include_dr = bool(request.form.get("include_dr"))
+        resource_discount = float(request.form.get("resource_discount") or 0)
+        labor_discount = float(request.form.get("labor_discount") or 0)
+        approved = bool(request.form.get("ps_approved"))
+
+        rvfile = request.files.get("rvtools_file")
+        if rvfile and rvfile.filename:
+            upload_path = Path(app.config["UPLOAD_FOLDER"]) / secure_filename(rvfile.filename)
+            rvfile.save(upload_path)
+            parsed = parse_rvtools(str(upload_path))
+            vm_count = parsed["vm_count"]
+            cpu = round(parsed["avg_cpu"])
+            memory = round(parsed["avg_memory_gb"])
+            storage = round(parsed["avg_storage_gb"])
+            windows_vms = parsed["windows_vms"]
+            linux_vms = parsed["linux_vms"]
+            rv_summary = parsed["summary"]
+        else:
+            vm_count = int(request.form["vm_count"])
+            cpu = int(request.form["cpu_per_vm"])
+            memory = int(request.form["memory_per_vm"])
+            storage = int(request.form["storage_per_vm"])
+            windows_vms = int(request.form["windows_vms"])
+            linux_vms = int(request.form["linux_vms"])
+            if windows_vms + linux_vms != vm_count:
+                flash("Windows + Linux VM counts must equal total VM count.")
+                return redirect(url_for("index"))
+            rv_summary = []
+
+        result = calculate(
+            EstimateInput(
+                vm_count=vm_count,
+                cpu_per_vm=cpu,
+                memory_gb_per_vm=memory,
+                storage_gb_per_vm=storage,
+                windows_vms=windows_vms,
+                linux_vms=linux_vms,
+                provider=provider,
+                resource_discount=resource_discount / 100,
+                labor_discount=labor_discount / 100,
+                include_migration=include_migration,
+                include_dr=include_dr,
+            )
+        )
+
+        payload = {
+            "input": {
+                "vm_count": vm_count,
+                "cpu_per_vm": cpu,
+                "memory_per_vm": memory,
+                "storage_per_vm": storage,
+                "windows_vms": windows_vms,
+                "linux_vms": linux_vms,
+                "provider": provider,
+                "resource_discount": resource_discount,
+                "labor_discount": labor_discount,
+                "include_migration": include_migration,
+                "include_dr": include_dr,
+                "ps_approved": approved,
+            },
+            "estimate": result,
+            "rv_summary": rv_summary,
+        }
+        append_audit(payload)
+
+        global LAST_ESTIMATE
+        LAST_ESTIMATE = payload
+
+        if not approved:
+            flash("Estimate generated but flagged: Leadership approval required before sharing.")
+
+        return render_template("result.html", payload=payload)
+
+    return render_template("index.html")
+
+
+@app.route("/pdf")
+def pdf():
+    if not LAST_ESTIMATE:
+        return redirect(url_for("index"))
+
+    pdf_bytes = build_pdf(LAST_ESTIMATE["estimate"])
+    out = Path("data/latest-estimate.pdf")
+    out.write_bytes(pdf_bytes)
+    return send_file(out, as_attachment=True, download_name="budgetary-estimate.pdf")
+
+
+if __name__ == "__main__":
+    app.run(host="0.0.0.0", port=5000, debug=True)
