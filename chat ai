@@ -0,0 +1,56 @@
+"""PDF reporting with watermark logo background on all pages."""
+from __future__ import annotations
+
+from io import BytesIO
+
+from reportlab.lib.pagesizes import letter
+from reportlab.pdfgen import canvas
+
+
+def _watermark(c: canvas.Canvas):
+    c.saveState()
+    c.setFillAlpha(0.07)
+    c.setFont("Helvetica-Bold", 96)
+    c.drawCentredString(306, 400, "TierPoint")
+    c.restoreState()
+
+
+def build_pdf(payload: dict) -> bytes:
+    buffer = BytesIO()
+    c = canvas.Canvas(buffer, pagesize=letter)
+
+    _watermark(c)
+    t = c.beginText(40, 750)
+    t.textLine("Budgetary Cloud Estimate (Draft - No Price Commitment)")
+    t.textLine("")
+    t.textLine(f"Pricing snapshot version/date: {payload['pricing_version']}")
+    t.textLine("Region assumption (pilot): AWS us-east-1 / Azure East US")
+    t.textLine("")
+    for provider, details in payload["providers"].items():
+        t.textLine(f"Provider: {provider.upper()}")
+        t.textLine(f"  VM range types: {details['low_type']} to {details['high_type']}")
+        t.textLine(f"  Monthly estimate low/high: ${details['monthly_low']} / ${details['monthly_high']}")
+        t.textLine(f"  DR monthly add-on: ${details['dr_monthly']}")
+        t.textLine(f"  Migration one-time: ${details['migration_one_time']}")
+        t.textLine("")
+    c.drawText(t)
+    c.showPage()
+
+    _watermark(c)
+    t2 = c.beginText(40, 760)
+    disclaimers = [
+        "Assumptions: On-demand catalog pricing with bounded discounts and enforced margin floors.",
+        "Exclusions: Bandwidth, monitoring, security tooling, compliance uplift, taxes, and third-party licenses.",
+        "Compliant/high-security environments may significantly increase costs.",
+        "Results are deterministic and reproducible for identical inputs and same pricing snapshot.",
+        "This estimate is budgetary only and is not a contractual price commitment.",
+    ]
+    t2.textLine("Disclaimers & Assumptions")
+    t2.textLine("")
+    for d in disclaimers:
+        t2.textLine(f"- {d}")
+        t2.textLine("")
+    c.drawText(t2)
+    c.save()
+
+    return buffer.getvalue()
