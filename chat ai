diff --git a/estimator/audit.py b/estimator/audit.py
new file mode 100644
index 0000000000000000000000000000000000000000..7ee7e779d4c18c5ea399e4405194913d2197eb6a
--- /dev/null
+++ b/estimator/audit.py
@@ -0,0 +1,29 @@
+"""Append-only immutable-ish audit log with hash chaining."""
+from __future__ import annotations
+
+import hashlib
+import json
+from datetime import datetime, timezone
+from pathlib import Path
+
+LOG_PATH = Path("data/estimate_log.jsonl")
+
+
+def _last_hash() -> str:
+    if not LOG_PATH.exists():
+        return "GENESIS"
+    last = LOG_PATH.read_text().strip().splitlines()[-1]
+    return json.loads(last)["hash"]
+
+
+def append_audit(entry: dict) -> None:
+    LOG_PATH.parent.mkdir(exist_ok=True)
+    payload = {
+        "timestamp": datetime.now(timezone.utc).isoformat(),
+        "entry": entry,
+        "prev_hash": _last_hash(),
+    }
+    digest = hashlib.sha256(json.dumps(payload, sort_keys=True).encode()).hexdigest()
+    payload["hash"] = digest
+    with LOG_PATH.open("a", encoding="utf-8") as f:
+        f.write(json.dumps(payload) + "\n")
diff --git a/estimator/calculator.py b/estimator/calculator.py
new file mode 100644
index 0000000000000000000000000000000000000000..7f088795b908f294eedd21f9a563bcbfac8a04be
--- /dev/null
+++ b/estimator/calculator.py
@@ -0,0 +1,67 @@
+"""Deterministic estimate calculations."""
+from __future__ import annotations
+
+from dataclasses import dataclass
+
+from estimator.pricing import PRICING_VERSION, choose_low_high_types, margin_floor
+
+
+@dataclass
+class EstimateInput:
+    vm_count: int
+    cpu_per_vm: int
+    memory_gb_per_vm: int
+    storage_gb_per_vm: int
+    windows_vms: int
+    linux_vms: int
+    provider: str
+    resource_discount: float = 0.0
+    labor_discount: float = 0.0
+    include_migration: bool = False
+    include_dr: bool = False
+
+
+def calculate(inp: EstimateInput) -> dict:
+    if inp.provider not in {"aws", "azure", "both"}:
+        raise ValueError("provider must be aws/azure/both")
+
+    providers = ["aws", "azure"] if inp.provider == "both" else [inp.provider]
+    output = {"providers": {}, "pricing_version": PRICING_VERSION}
+
+    for provider in providers:
+        low_type, high_type = choose_low_high_types(provider, inp.cpu_per_vm, inp.memory_gb_per_vm)
+        base_low = low_type.monthly_price * inp.vm_count
+        base_high = high_type.monthly_price * inp.vm_count
+
+        discount = max(0.0, min(0.6, inp.resource_discount))
+        discounted_low = base_low * (1 - discount)
+        discounted_high = base_high * (1 - discount)
+
+        margin = margin_floor(provider)
+        low_with_margin = discounted_low / (1 - margin)
+        high_with_margin = discounted_high / (1 - margin)
+
+        migration = 0
+        if inp.include_migration:
+            migration = inp.vm_count * 450
+
+        dr = 0
+        if inp.include_dr:
+            dr = inp.vm_count * 65
+
+        output["providers"][provider] = {
+            "low_type": low_type.name,
+            "high_type": high_type.name,
+            "monthly_low": round(low_with_margin + dr, 2),
+            "monthly_high": round(high_with_margin + dr, 2),
+            "dr_monthly": dr,
+            "migration_one_time": migration,
+            "margin_floor": margin,
+        }
+
+    output["explanation"] = (
+        "Monthly estimate = mapped VM retail x VM count x (1-resource discount), "
+        "then margin floor is enforced and DR add-on included when selected. "
+        "Migration is a separate one-time budgetary amount."
+    )
+    return output
diff --git a/estimator/pdf_report.py b/estimator/pdf_report.py
new file mode 100644
index 0000000000000000000000000000000000000000..80f51e5141b3e290d2af820b6050149407a02ac2
