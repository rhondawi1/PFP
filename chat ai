@@ -0,0 +1,32 @@
+"""RVTools parser helpers."""
+from __future__ import annotations
+
+import pandas as pd
+
+
+def parse_rvtools(path: str) -> dict:
+    df = pd.read_excel(path)
+    normalized = {c.lower().strip(): c for c in df.columns}
+
+    cpu_col = normalized.get("cpus") or normalized.get("numcpu")
+    mem_col = normalized.get("memory") or normalized.get("memorygb")
+    storage_col = normalized.get("provisioned space") or normalized.get("storagegb")
+    os_col = normalized.get("os according to the configuration file") or normalized.get("os")
+
+    required = [cpu_col, mem_col, storage_col, os_col]
+    if not all(required):
+        raise ValueError("RV tools file missing one of required columns: CPUs, Memory, Storage, OS")
+
+    os_values = df[os_col].astype(str).str.lower()
+    windows = os_values.str.contains("windows").sum()
+    linux = len(df) - windows
+
+    return {
+        "vm_count": int(len(df)),
+        "avg_cpu": float(df[cpu_col].mean()),
+        "avg_memory_gb": float(df[mem_col].mean()),
+        "avg_storage_gb": float(df[storage_col].mean()),
+        "windows_vms": int(windows),
+        "linux_vms": int(linux),
+        "summary": df[[cpu_col, mem_col, storage_col, os_col]].head(10).to_dict(orient="records"),
+    }
