diff --git a/run_local.py b/run_local.py
new file mode 100644
index 0000000000000000000000000000000000000000..f34266061250072e34d3044845b0679d4034491d
--- /dev/null
+++ b/run_local.py
@@ -0,0 +1,27 @@
+"""Local launcher with dependency checks."""
+from __future__ import annotations
+
+import importlib.util
+
+REQUIRED = ["flask", "pandas", "openpyxl", "reportlab"]
+
+
+def main() -> int:
+    missing = [pkg for pkg in REQUIRED if importlib.util.find_spec(pkg) is None]
+    if missing:
+        print("Missing Python packages:", ", ".join(missing))
+        print("Install dependencies first:")
+        print("  python -m venv .venv")
+        print("  source .venv/bin/activate   # Windows: .venv\\Scripts\\activate")
+        print("  python -m pip install --upgrade pip")
+        print("  python -m pip install -r requirements.txt")
+        return 1
+
+    from app import app
+
+    app.run(host="0.0.0.0", port=5000, debug=True)
+    return 0
+
+
+if __name__ == "__main__":
+    raise SystemExit(main())
